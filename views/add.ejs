<%- include('partials/header') %>

<h1 class="mb-4"><%= title %></h1>

<div class="card shadow-sm">
    <div class="card-body">
        <form action="/add" method="POST">
            <div class="mb-3">
                <label for="nama_koin" class="form-label">Nama Koin</label>
                <input type="text" class="form-control" id="nama_koin" name="nama_koin" placeholder="Contoh: Bitcoin" required>
            </div>
            <div class="mb-3">
                <label for="simbol_koin" class="form-label">Simbol Koin</label>
                <input type="text" class="form-control" id="simbol_koin" name="simbol_koin" placeholder="Contoh: BTC" required>
            </div>
            <div class="mb-3">
                <label for="jumlah_koin" class="form-label">Jumlah Koin</label>
                <input type="number" step="0.00000001" class="form-control" id="jumlah_koin" name="jumlah_koin" placeholder="Contoh: 0.5" required>
            </div>
            <div class="mb-3">
                <label for="harga_beli_rata_rata" class="form-label">Harga Beli Rata-rata (USD)</label>
                <input type="number" step="0.01" class="form-control" id="harga_beli_rata_rata" name="harga_beli_rata_rata" placeholder="Contoh: 68000" required>
            </div>
            <button type="submit" class="btn btn-primary">Simpan</button>
            <a href="/" class="btn btn-secondary">Batal</a>
        </form>
    </div>
</div>

<%- include('partials/footer') %>